                <LinearLayout android:orientation="vertical" android:id="@+id/layout_content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="5.0sp" android:layout_marginRight="5.0sp" android:layout_toLeftOf="@+id/tv_duration" android:layout_centerVertical="true">
                    <TextView android:textSize="18.0sp" android:textColor="@color/white" android:id="@+id/tv_song" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="5.0sp" android:text="AABBCBCBC ABBCBABC" android:singleLine="true" />
                    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/img_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_play_arrow_white_24dp" android:layout_centerVertical="true" />
                        <TextView android:textSize="14.0sp" android:textColor="@color/white" android:id="@+id/tv_playcount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="18,205" android:singleLine="true" android:layout_toRightOf="@+id/img_play" android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView android:textSize="14.0sp" android:textColor="@color/white" android:id="@+id/tv_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5.0sp" android:text="50:00" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>