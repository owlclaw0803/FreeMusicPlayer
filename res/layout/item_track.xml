            <ImageView android:id="@+id/img_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5.0sp" android:src="@drawable/powered_logo" android:layout_toLeftOf="@+id/btn_download" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
