    </LinearLayout>
    <TextView android:textSize="16.0sp" android:textColor="@color/white" android:id="@+id/tv_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5.0sp" android:text="Version 1.0.5" android:layout_above="@+id/tv_copyright" android:layout_centerHorizontal="true" />
    <TextView android:textSize="16.0sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tv_copyright" android:paddingBottom="5.0sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/copyright" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" />
</RelativeLayout>